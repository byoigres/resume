{
  "name": "resume",
  "version": "1.2.5",
  "description": "My HTML and CSS resume.",
  "main": "index.js",
  "scripts": {
    "dev": "run-p watch-less serve",
    "serve": "browser-sync start --server --no-open --files 'index.html' 'css/styles.css'",
    "watch-less": "less-watch-compiler --config less-watch-compiler.dev.config.json",
    "build": "run-p minify-html build-css",
    "minify-html": "html-minifier-terser --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes index.html | sed 's/styles.css/styles.min.css/g' > docs/index.html",
    "build-css": "less-watch-compiler --config less-watch-compiler.prod.config.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byoigres/resume.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/byoigres/resume/issues"
  },
  "homepage": "https://github.com/byoigres/resume#readme",
  "devDependencies": {
    "browser-sync": "^3.0.2",
    "html-minifier-terser": "^7.2.0",
    "less": "^4.2.0",
    "less-watch-compiler": "^1.16.3",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": "v20"
  }
}
